<main>
  <div class="container">
    <div class="row">
      <div class="col s12 m12 l12">
        <h2>Deposits</h2>
      </div>
    </div>
    <div class="row">
      <div class="col s12 m12 l12">
        <table>
          <thead>
            <tr>
              <th>User</th>
              <th>Offer</th>
              <th>Percentage</th>
              <th>Amount</th>
            </tr>
          </thead>
          <tbody>
            <% @deposits.each do |deposit| %>
              <tr>
                <td><%= deposit.from.name %></td>
                <td><%= deposit.from.offer.price/100 %></td>
                <td><%= deposit.from.offer.percentage %></td>
                <td><%= deposit.amount/100 %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>