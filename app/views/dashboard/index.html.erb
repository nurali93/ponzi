<main>
  <div class="container">
    <div class="row">
      <div class="col s12 m12 l12">
        <h2>Deposits</h2>
      </div>
    </div>
    <% if @deposits.present? %>
      <div class="row">
        <div class="col s12 m12 l12">
          <table>
            <thead>
              <tr>
                <th>User</th>
                <th>Offer</th>
                <th>Percentage</th>
                <th>Amount</th>
              </tr>
            </thead>
            <tbody>
              <% @deposits.each do |deposit| %>
                <tr>
                  <td><%= deposit.from.hash %></td>
                  <td><%= deposit.from.offer.price/100 %></td>
                  <td><%= deposit.from.offer.percentage %></td>
                  <td><%= deposit.amount/100 %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
      <div class="row">
        <div class="col s12 m12 l12">
          <p>No deposit found.</p>
          <p>Creat an offer to start receiving!</p>
          <%= link_to 'Add Offer', new_offer_path, class: 'btn btn-large' %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="fixed-action-btn">
    <%= link_to new_offer_path, class: 'btn-floating btn-large waves-effect waves-light' do %>
      <i class="large material-icons">add</i>
    <% end %>
  </div>
</main>