<main>
  <div class="container">
    <div class="row">
      <div class="col s12 m12 l12">
        <h2>My Offers</h2>
      </div>
    </div>
    <div class="row">
      <div class="col s12 m12 l12">
        <table>
          <thead>
            <tr>
              <th>Price</th>
              <th>Percentage</th>
              <th>Paid</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @offers.each do |offer| %>
              <tr>
                <td><%= offer.price %></td>
                <td><%= offer.percentage %></td>
                  <% if offer.payable.paid %>
                    <td><i class="material-icons green-text">done</i></td>
                    <td><%= link_to 'share', offer_recruit_url(offer.code), class: 'btn waves-effect waves-light' %></td>
                  <% else %>
                    <td><i class="material-icons grey-text text-lighten-2">done</i></td>
                    <td><%= link_to 'Pay now', payable_payments_path(offer.payable), method: :post, class: 'btn waves-effect waves-light orange' %></td>
                  <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="fixed-action-btn">
    <%= link_to new_offer_path, class: 'btn-floating btn-large waves-effect waves-light' do %>
      <i class="large material-icons">add</i>
    <% end %>
  </div>
</main>
