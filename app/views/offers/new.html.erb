<main>
  <div class="container">
    <h2>New Offer</h2>
    <%= form_for(@offer) do |f| %>

      <div class="row">
        <div class="col s12 m5 l4">
          <div class="input-field">
            <%= f.select("price", price_options, { prompt: 'Price' }) %>
          </div>
        </div>
        <div class="col s12 m5 l4">
          <div class="input-field">
            <%= f.select("percentage", percentage_options, { prompt: 'Percentage' }) %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col s12 m5 l4">
          <div class="payable">
            <h1>RM <strong class="indigo-text" id="payable_amount">0</strong></h1>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col s12 m12 l12">
          <p>You don't have to pay now</p>
        </div>
      </div>

      <div class="row">
        <div class="col s12 m5 l4">
          <div class="input-field">
            <%= submit_tag "Create", class: "btn" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</main>
  