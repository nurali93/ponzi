<main>
  <div class="container">
    <h1>New Offer</h1>
    <%= form_for(@offer) do |f| %>

      <div class="row">
        <div class="col s12 m5 l4">
          <div class="input-field">
            <%= f.select("price", [100, 500, 1000, 5000, 10000], { prompt: 'Price' }) %>
          </div>
        </div>
        <div class="col s12 m5 l4">
          <div class="input-field">
            <%= f.select("percentage", (1..9).map { |e| e*10 }, { prompt: 'Percentage' }) %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col s12 m5 l4">
          <div class="payable">
            <h1>RM <strong class="indigo-text" id="payable_amount">0</strong></h1>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col s12 m5 l4">
          <div class="input-field">
            <%= submit_tag "Submit", class: "btn waves-effect waves-light" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</main>
  